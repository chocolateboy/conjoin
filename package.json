{
    "name": "@chocolatey/conjoin",
    "version": "3.0.0",
    "description": "A fast and flexible joiner for iterables and arrays with a tiny footprint",
    "author": "chocolateboy",
    "repository": "https://github.com/chocolateboy/conjoin",
    "license": "Artistic-2.0",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "unpkg": "dist/index.umd.min.js",
    "jsdelivr": "dist/index.umd.min.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "bili --map --format cjs -d dist src/index.ts",
        "build:main": "cross-env NODE_ENV=production bili --no-map --format cjs,esm -d dist src/index.ts",
        "build:min": "cross-env NODE_ENV=production bili --config ./minify.config.js --no-map --format esm-min -d dist src/index.ts",
        "build:release": "run-s build:main build:umd",
        "build:umd": "cross-env NODE_ENV=production bili --config ./minify.config.js --module-name Conjoin --no-map --format umd-min -d dist src/index.ts",
        "clean": "shx rm -rf dist",
        "doctoc": "markdown-toc --bullets=- --maxdepth 3 -i README.md",
        "prepublishOnly": "run-s clean typecheck build:release test:run",
        "rebuild": "run-s clean build",
        "test": "run-s typecheck build test:run",
        "test:run": "ava --verbose ./test.js",
        "typecheck": "tsc --noEmit --noImplicitAny --noUnusedLocals --noUnusedParameters --strict"
    },
    "files": [
        "dist/index.d.ts",
        "dist/index.esm.js",
        "dist/index.js",
        "dist/index.umd.min.js"
    ],
    "browserslist": "maintained node versions",
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "ava": "^3.12.1",
        "babel-plugin-source-map-support": "^2.1.3",
        "bili": "^5.0.5",
        "cross-env": "^7.0.2",
        "markdown-toc": "^1.2.0",
        "npm-run-all": "^4.1.5",
        "rollup-plugin-typescript2": "^0.27.2",
        "shx": "^0.3.2",
        "typescript": "^4.0.2"
    },
    "keywords": [
        "array",
        "array-join",
        "conjoin",
        "curried",
        "iterable",
        "join",
        "joiner",
        "list",
        "oxford-comma",
        "sentence",
        "separator",
        "separators",
        "serial-comma"
    ]
}
